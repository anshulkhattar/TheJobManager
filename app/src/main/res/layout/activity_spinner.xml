<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".LoginActivities.SpinnerActivity"
        android:background="@drawable/whitebgup">

    <RelativeLayout
            android:layout_width="365dp"
            android:layout_height="92dp"
            android:layout_weight=".28"
            android:background="@drawable/spinner_border"
            android:orientation="horizontal"
            app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="23dp" android:layout_marginRight="23dp"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginLeft="23dp"
            android:layout_marginStart="23dp" android:layout_marginBottom="237dp"
            app:layout_constraintBottom_toBottomOf="parent" android:layout_marginTop="149dp"
            app:layout_constraintTop_toBottomOf="@+id/textView">

        <Spinner
                android:id="@+id/spinner"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_gravity="center"
                android:background="@android:color/transparent"
                android:gravity="center"
                android:paddingLeft="10dp"
                android:layout_marginLeft="5dp"
                android:spinnerMode="dropdown"/>

        <ImageView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_alignParentRight="true"
                android:layout_gravity="center"
                android:src="@drawable/dropp" android:layout_marginRight="30dp"/>

    </RelativeLayout>
    <TextView
            android:text="Who are you?"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/textView" android:textSize="45sp"
            app:layout_constraintTop_toTopOf="parent" android:layout_marginTop="121dp"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginLeft="102dp"
            android:layout_marginStart="102dp" app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="102dp" android:layout_marginRight="102dp" android:layout_marginBottom="8dp"
            app:layout_constraintBottom_toBottomOf="parent" app:layout_constraintHorizontal_bias="0.517"
            app:layout_constraintVertical_bias="0.01" android:textColor="#000" android:textStyle="bold"/>

</android.support.constraint.ConstraintLayout>