<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
             xmlns:tools="http://schemas.android.com/tools"
             android:layout_width="match_parent"
             android:layout_height="match_parent"
             tools:context=".Supervisor.AddNewJobFragment">

    <ScrollView
            xmlns:android="http://schemas.android.com/apk/res/android"
            xmlns:tools="http://schemas.android.com/tools"
            xmlns:app="http://schemas.android.com/apk/res-auto"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:fillViewport="true"
            tools:context=".SupervisorActivities.NewJobActivity">

        <android.support.constraint.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@drawable/whitebgdown">

            <EditText
                    android:layout_width="266dp"
                    android:layout_height="45dp"
                    android:inputType="text"
                    android:hint="Enter Job Profile"
                    android:ems="10"
                    android:id="@+id/profile"
                    android:paddingLeft="10dp"
                    android:layout_marginEnd="8dp"
                    app:layout_constraintEnd_toEndOf="parent" android:layout_marginRight="8dp"
                    android:layout_marginTop="8dp"
                    app:layout_constraintTop_toTopOf="parent" android:layout_marginStart="8dp"
                    app:layout_constraintStart_toStartOf="parent" android:layout_marginLeft="8dp"
                    android:layout_marginBottom="8dp" app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintVertical_bias="0.162"
                    android:background="@drawable/edittext_design" app:layout_constraintHorizontal_bias="0.488"/>
            <EditText
                    android:paddingLeft="10dp"
                    android:layout_width="266dp"
                    android:background="@drawable/edittext_design"
                    android:layout_height="48dp"
                    android:inputType="text"
                    android:hint="Enter job duration"
                    android:ems="10"
                    android:id="@+id/duration"
                    android:layout_marginEnd="8dp"
                    app:layout_constraintEnd_toEndOf="parent" android:layout_marginRight="8dp"
                    android:layout_marginStart="8dp"
                    app:layout_constraintStart_toStartOf="parent" android:layout_marginLeft="8dp"
                    android:layout_marginTop="8dp"
                    app:layout_constraintTop_toTopOf="parent" android:layout_marginBottom="8dp"
                    app:layout_constraintBottom_toBottomOf="parent" app:layout_constraintVertical_bias="0.277"
                    app:layout_constraintHorizontal_bias="0.504"/>
            <EditText
                    android:layout_width="266dp"
                    android:layout_height="49dp"
                    android:background="@drawable/edittext_design"
                    android:inputType="textPostalAddress"
                    android:paddingLeft="10dp"
                    android:hint="Enter Job location"
                    android:id="@+id/location"
                    android:layout_marginEnd="8dp"
                    app:layout_constraintEnd_toEndOf="parent" android:layout_marginRight="8dp"
                    android:layout_marginStart="8dp"
                    app:layout_constraintStart_toStartOf="parent" android:layout_marginLeft="8dp"
                    android:layout_marginTop="8dp"
                    app:layout_constraintTop_toTopOf="parent" android:layout_marginBottom="8dp"
                    app:layout_constraintBottom_toBottomOf="parent" app:layout_constraintVertical_bias="0.393"/>
            <EditText
                    android:layout_width="202dp"
                    android:background="@drawable/edittext_design"
                    android:layout_height="48dp"
                    android:inputType="number"
                    android:hint="Enter job range"
                    android:paddingLeft="10dp"
                    android:id="@+id/range"
                    android:layout_marginEnd="8dp"
                    app:layout_constraintEnd_toEndOf="parent" android:layout_marginRight="8dp"
                    android:layout_marginStart="8dp"
                    app:layout_constraintStart_toStartOf="parent" android:layout_marginLeft="8dp"
                    android:layout_marginTop="8dp"
                    app:layout_constraintTop_toTopOf="parent" android:layout_marginBottom="8dp"
                    app:layout_constraintBottom_toBottomOf="parent" app:layout_constraintVertical_bias="0.514"
                    app:layout_constraintHorizontal_bias="0.341"/>
            <EditText
                    android:layout_width="266dp"
                    android:background="@drawable/edittext_design"
                    android:layout_height="48dp"
                    android:inputType="date"
                    android:hint="Enter job start date"
                    android:paddingLeft="10dp"
                    android:id="@+id/date"
                    android:layout_marginEnd="8dp"
                    app:layout_constraintEnd_toEndOf="parent" android:layout_marginRight="8dp"
                    android:layout_marginStart="8dp"
                    app:layout_constraintStart_toStartOf="parent" android:layout_marginLeft="8dp"
                    android:layout_marginTop="8dp"
                    app:layout_constraintTop_toTopOf="parent" android:layout_marginBottom="8dp"
                    app:layout_constraintBottom_toBottomOf="parent" app:layout_constraintVertical_bias="0.749"
                    app:layout_constraintHorizontal_bias="0.519"/>
            <EditText
                    android:layout_width="266dp"
                    android:background="@drawable/edittext_design"
                    android:layout_height="48dp"
                    android:inputType="number"
                    android:ems="10"
                    android:hint="Enter job payment"
                    android:paddingLeft="10dp"
                    android:id="@+id/payment"
                    android:layout_marginEnd="8dp"
                    app:layout_constraintEnd_toEndOf="parent" android:layout_marginRight="8dp"
                    android:layout_marginStart="8dp"
                    app:layout_constraintStart_toStartOf="parent" android:layout_marginLeft="8dp"
                    android:layout_marginTop="8dp"
                    app:layout_constraintTop_toTopOf="parent" android:layout_marginBottom="8dp"
                    app:layout_constraintBottom_toBottomOf="parent" app:layout_constraintVertical_bias="0.625"
                    app:layout_constraintHorizontal_bias="0.507"/>
            <Button
                    android:text="add"
                    android:layout_width="146dp"
                    android:layout_height="51dp"
                    android:id="@+id/add"
                    android:background="@drawable/logoutbuttondesign" android:textColor="#FFFFFF"
                    android:layout_marginEnd="8dp"
                    app:layout_constraintEnd_toEndOf="parent" android:layout_marginRight="8dp"
                    android:layout_marginStart="8dp"
                    app:layout_constraintStart_toStartOf="parent" android:layout_marginLeft="8dp"
                    android:layout_marginBottom="8dp" app:layout_constraintBottom_toBottomOf="parent"
                    android:layout_marginTop="8dp" app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintVertical_bias="0.92" android:textSize="20sp"
                    app:layout_constraintHorizontal_bias="0.497"/>
            <TextView
                    android:text="km"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/textView2" android:textColor="#000"
                    android:textStyle="bold" android:textSize="30sp" android:layout_marginEnd="8dp"
                    app:layout_constraintEnd_toEndOf="parent" android:layout_marginRight="8dp"
                    android:layout_marginStart="8dp" app:layout_constraintStart_toStartOf="parent"
                    android:layout_marginLeft="8dp" app:layout_constraintHorizontal_bias="0.787"
                    android:layout_marginTop="8dp" app:layout_constraintTop_toTopOf="parent"
                    android:layout_marginBottom="8dp" app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintVertical_bias="0.52"/>

        </android.support.constraint.ConstraintLayout>
    </ScrollView>

</FrameLayout>