<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
          package="com.example.hp.thejobmanager">

    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE"/>
    <uses-permission android:name="android.permission.ACCESS_COARSE_LOCATION"/>
    <uses-permission android:name="android.permission.ACCESS_FINE_LOCATION"/>
    <uses-permission android:name="android.permission.INTERNET"/>

    <application
            android:allowBackup="true"
            android:icon="@mipmap/ic_launcher"
            android:label="@string/app_name"
            android:roundIcon="@mipmap/ic_launcher_round"
            android:supportsRtl="true"
            android:theme="@style/AppTheme">
        <activity android:name=".LoginActivities.LoginActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN"/>

                <category android:name="android.intent.category.LAUNCHER"/>
            </intent-filter>
        </activity>
        <activity android:name=".LoginActivities.SpinnerActivity">
        </activity>
        <activity android:name=".userDetailActivities.SupervisorDetailsActivity">
        </activity>
        <activity android:name=".userDetailActivities.WorkerDetailsActivity">
        </activity>
        <activity
                android:name=".SupervisorActivities.AddJobActivity"
                android:label="@string/title_activity_add_job"
                android:theme="@style/AppTheme">
        </activity>
        <activity android:name=".WorkerActivities.WorkerJobsDisplayActivity">
        </activity>
        <activity
                android:name=".SupervisorActivities.NewJobActivity"
                android:windowSoftInputMode="stateVisible|adjustPan">
        </activity>
        android:name=".ContextApplication" >
        <activity android:name=".Supervisor.SupervisorActivity">
        </activity>
        <activity android:name=".WorkerActivity">
        </activity>
    </application>

</manifest>